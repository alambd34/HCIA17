<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <RelativeLayout
        android:id="@+id/contact_info"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/PrimaryColor">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/width_circle_view"
            android:layout_height="@dimen/height_circle_view"
            android:padding="@dimen/padding_circle_view"
            android:src="@drawable/icon_profile" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/profile_image">

            <TextView
                android:id="@+id/add_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/add_to_contact"
                android:textColor="#fff"
                android:textSize="@dimen/add_to_contact_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/profile_image"
            android:orientation="vertical"
            android:padding="@dimen/padding_linear_layout">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff"
                android:textSize="@dimen/text_size_contact" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff"
                android:textSize="@dimen/text_size_contact" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="@dimen/width_menu_button"
            android:layout_height="@dimen/height_menu_button"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:background="@drawable/menu" />

        <LinearLayout
            android:id="@+id/list_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/menu"
            android:orientation="vertical"
            android:padding="@dimen/padding_linear_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#fff" />

            <ImageButton
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/dropdown" />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_info">

        <EditText
            android:id="@+id/txt_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:lines="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="40sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp">

                <ImageButton
                    android:id="@+id/btn_1"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="@dimen/image_button_height"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_1" />

                <ImageButton
                    android:id="@+id/btn_2"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="@dimen/image_button_height"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_2" />

                <ImageButton
                    android:id="@+id/btn_3"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="@dimen/image_button_height"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_3" />
            </TableRow>

            <TableRow android:layout_marginBottom="1dp">

                <ImageButton
                    android:id="@+id/btn_4"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="@dimen/image_button_height"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_4" />

                <ImageButton
                    android:id="@+id/btn_5"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="@dimen/image_button_height"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_5" />

                <ImageButton
                    android:id="@+id/btn_6"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="@dimen/image_button_height"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_6" />
            </TableRow>

            <TableRow android:layout_marginBottom="1dp">

                <ImageButton
                    android:id="@+id/btn_7"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="@dimen/image_button_height"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_7" />

                <ImageButton
                    android:id="@+id/btn_8"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="@dimen/image_button_height"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_8" />

                <ImageButton
                    android:id="@+id/btn_9"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="@dimen/image_button_height"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_9" />
            </TableRow>

            <TableRow android:layout_marginBottom="1dp">

                <ImageButton
                    android:id="@+id/btn_star"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="@dimen/image_button_height"
                    android:layout_marginLeft="1dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_star" />

                <ImageButton
                    android:id="@+id/btn_0"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="@dimen/image_button_height"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_0" />

                <ImageButton
                    android:id="@+id/btn_hash"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="@dimen/image_button_width"
                    android:layout_height="@dimen/image_button_height"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_hash" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_height_call_action"
            android:background="@color/grey_100"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_voice_call"
                    android:layout_width="@dimen/height_voice_call"
                    android:layout_height="@dimen/width_voice_call"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:src="@drawable/icon_voice_green" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:background="@drawable/ripple_effect"
                    android:src="@drawable/icon_make_phone"
                    app:backgroundTint="@color/green_A700" />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_delete_number"
                    android:layout_width="@dimen/height_delete_number"
                    android:layout_height="@dimen/width_delete_number"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    android:src="@drawable/icon_delete_phone_number" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
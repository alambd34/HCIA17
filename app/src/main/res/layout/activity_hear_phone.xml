<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ui.activity.HearPhoneActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg1"
            android:scaleType="fitXY" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10.0dp"
            android:layout_marginLeft="30.0dp"
            android:layout_marginTop="30.0dp"
            android:gravity="center">

            <TextView
                android:id="@+id/outgoing_call_txt_caller_name"
                android:layout_width="190.0dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Trung bk2"
                android:textColor="#ffffffff"
                android:textSize="30.0dp" />

            <TextView
                android:id="@+id/outgoing_call_txt_caller_mob_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/outgoing_call_txt_caller_name"
                android:text="01626572556"
                android:textColor="#ffffffff"
                android:textSize="20.0dp" />

            <Chronometer
                android:id="@+id/outgoing_call_txt_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/outgoing_call_txt_caller_mob_no"
                android:layout_marginRight="15.0dp"
                android:layout_marginTop="15.0dp"
                android:text="00:00"
                android:textColor="#ffffffff"
                android:textSize="18.0dp" />


        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/out_img_caller"
            android:layout_width="100.0dp"
            android:layout_height="100.0dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="25.0dp"
            android:layout_marginTop="30.0dp"
            android:clickable="true"
            android:src="@drawable/defultuserphoto" />

        <android.opengl.GLSurfaceView
            android:id="@+id/gl_surface_view"
            android:layout_below="@id/out_img_caller"
            android:layout_marginTop="22dp"
            android:layout_width="@dimen/height_gl_surface_view_hear"
            android:layout_height="@dimen/width_gl_surface_view_hear"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/outgoing_rlout_functions"
            android:layout_marginTop="16dp"
            android:layout_below="@id/gl_surface_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_btn_mute"
                        android:layout_width="70.0dp"
                        android:layout_height="70.0dp"
                        android:layout_marginLeft="10.0dp"
                        android:layout_marginRight="10.0dp"
                        android:layout_marginTop="10.0dp"
                        android:src="@drawable/mute" />

                    <TextView
                        android:id="@+id/txt_mute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Mute"
                        android:textColor="#ffffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_btn_keypad"
                        android:layout_width="70.0dp"
                        android:layout_height="70.0dp"
                        android:layout_marginLeft="10.0dp"
                        android:layout_marginRight="10.0dp"
                        android:layout_marginTop="10.0dp"
                        android:src="@drawable/keypad" />

                    <TextView
                        android:id="@+id/txt_dial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="keypad"
                        android:textColor="#ffffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_btn_speaker"
                        android:layout_width="70.0dp"
                        android:layout_height="70.0dp"
                        android:layout_marginLeft="10.0dp"
                        android:layout_marginRight="10.0dp"
                        android:layout_marginTop="10.0dp"
                        android:layout_weight="1.0"
                        android:src="@drawable/speaker" />

                    <TextView
                        android:id="@+id/txt_speaker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Speaker"
                        android:textColor="#ffffffff" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_btn_addcall"
                        android:layout_width="70.0dp"
                        android:layout_height="70.0dp"
                        android:layout_marginLeft="10.0dp"
                        android:layout_marginRight="10.0dp"
                        android:layout_marginTop="10.0dp"
                        android:src="@drawable/addcall" />

                    <TextView
                        android:id="@+id/txt_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="add call"
                        android:textColor="#ffffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_btn_facetime"
                        android:layout_width="70.0dp"
                        android:layout_height="70.0dp"
                        android:layout_marginLeft="10.0dp"
                        android:layout_marginRight="10.0dp"
                        android:layout_marginTop="10.0dp"
                        android:src="@drawable/facetime" />

                    <TextView
                        android:id="@+id/txt_contect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="facetime"
                        android:textColor="#ffffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_btn_contact"
                        android:layout_width="70.0dp"
                        android:layout_height="70.0dp"
                        android:layout_marginLeft="10.0dp"
                        android:layout_marginRight="10.0dp"
                        android:layout_marginTop="10.0dp"
                        android:src="@drawable/contact" />

                    <TextView
                        android:id="@+id/txt_facetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="contacts"
                        android:textColor="#ffffffff" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <ImageView
            android:id="@+id/cancel_call"
            android:layout_width="70.0dp"
            android:layout_height="70.0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:src="@drawable/ic_cancel_call" />

    </RelativeLayout>
</RelativeLayout>
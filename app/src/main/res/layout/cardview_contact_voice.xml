<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="@dimen/margin_left_img_contact"
    android:layout_marginTop="@dimen/margin_top_img_contact"
    android:layout_marginRight="@dimen/margin_right_img_contact"
    android:background="@drawable/ripple_effect_contact_voice"
    android:clickable="true"
    android:orientation="horizontal"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/cir_img_contact_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/person1" />

    <LinearLayout
        android:layout_marginLeft="@dimen/margin_left_info_contact"
        android:layout_marginTop="@dimen/margin_top_info_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_contact_name"
            android:text="Trung bk2.04"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/size_text_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_contact_number"
            android:text="Trung bk2.04"
            android:layout_marginTop="@dimen/margin_top_contact_number"
            android:textSize="@dimen/size_text_contact_phone"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>